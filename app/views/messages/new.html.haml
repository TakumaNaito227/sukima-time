= render "home/header"

.content
  .content__main
    = form_with model: @message do |f|
      .content__main__box
        .text-bold
          タイトル
          %span.required
            必須
        = f.text_field :title, class:"content__main__box__field", placeholder: "40文字まで", maxlength: 40
        .text-bold
          日付
          %span.required
            必須
          .flexbox
          - year = ["--"]
          - for num in 0..1
            - year << 2020+num
          = f.select :year, year, {}, class: "content__main__box__field"
          年
          - month = ["--"]
          - for num in 1..12
            - month << num
          = f.select :month, month, {}, class: "content__main__box__field"
          月
          - day = ["--"]
          - for num in 1..31
            - day << num
          = f.select :day, day, {}, class: "content__main__box__field"
          日
