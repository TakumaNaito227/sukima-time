= render "home/header"

.content
  .content__main
    = form_with model: @messages do |f|
      .content__main__box
        .text-bold
          ニックネーム
          %span.required
            必須
        = f.text_field :nickname, class:"content__main__box__field", placeholder: "40文字まで", maxlength: 40
        .text-bold
          タイトル
          %span.required
            必須
        = f.text_field :title, class:"content__main__box__field", placeholder: "40文字まで", maxlength: 40
        .text-bold
          日付
          %span.required
            必須
          .flexbox
          - year = ["--"]
          - for num in 0..1
            - year << 2020+num
          = f.select :year, year, {}, class: "content__main__box__field"
          年
          - month = ["--"]
          - for num in 1..12
            - month << num
          = f.select :month, month, {}, class: "content__main__box__field"
          月
          - day = ["--"]
          - for num in 1..31
            - day << num
          = f.select :day, day, {}, class: "content__main__box__field"
          日
        .text-bold
          勤務開始可能時間
          %span.required
            必須
        = f.time_select :start, {}, class: 'content__main__box__field'
        .text-bold
          勤務終了希望時間
          %span.required
            必須
        = f.time_select :end, {}, class: 'content__main__box__field'
        .text-bold
          時給
          %span.required
            必須
          - money = ["--"]
          - for num in 50..300
            - money << 10*num
          = f.select :money, money, {}, class: "content__main__box__field"
        .text-bold
          都市
          %span.required
            必須
        = f.collection_select :city_id, Cities.all, :id, :name, {prompt: "選択してください"}, class: "content__main__box__field"
        .text-bold
          テキスト
        = f.text_field :text, class:"content__main__box__field", placeholder: "40文字まで", maxlength: 40
      .content__main__botton-box
        = f.submit "決定", class: "content__main__box__field"
        .content__main__botton-box__draft-botton
          = link_to root_path, id: "back-btn" do
            もどる
