= render "home/header"
.messages
  .messages__main
    .messages__main__left
      .messages__main__left__profile
        .messages__main__left__profile__nickname
          = @nickname
        .messages__main__left__profile__image
        .messages__main__left__profile__details
          .messages__main__left__profile__details__left
            投稿数
            %br
            = @messages.count
          .messages__main__left__profile__details__right
            年齢
            %br
            = current_user.age
        .messages__main__left__profile__text
          = current_user.profile
    .messages__main__right
      .messages__main__right__requests
      -@messages.each do |message|
        .messages__main__right__requests__post
          .messages__main__right__requests__post__title
            = link_to message_path(message.id) do
              = message.title
          .messages__main__right__requests__contents
            .messages__main__right__requests__contents__day
              日付：
              = message.year
              年
              = message.month
              月
              = message.day
              日
            .messages__main__right__requests__contents__time
              .messages__main__right__requests__contents__time__start
                時間：
                = message.start.strftime('%H:%M')
                〜
              .messages__main__right__requests__contents__time__end
                = message.end.strftime('%H:%M')
            .messages__main__right__requests__contents__city
              場所：
              = message.city.name
  .messages__under
    .btn
      = link_to messages_path do
        編集
    .btn
      = link_to messages_path do
        戻る