= render "home/header"
.content__main
  .content__main__box
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .text-bold
        メールアドレス
      = f.email_field :email, class: "content__main__box__field"
      .text-bold
        パスワード
      = f.password_field :password, class: "content__main__box__field", placeholder: "6文字以上の半角英数字"
      - if devise_mapping.rememberable?
        .text-bold
          = f.check_box :remember_me
          = f.label :remember_me
      .text-bold
        = f.submit "Log in", class: "content__main__box__field__sign-up"
